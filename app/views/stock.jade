.header
	.symbol #{symbol}
	.name #{name}
.body
	currentPrice = currentPrice.toFixed(2)
	percentage = percentage.toFixed(2)
	if currentPrice > 0
		.price #{currentPrice}
		if percentage > 0
			.percentage.positive +#{percentage}%
		else
			.percentage.negative #{percentage}%
	else
		.loading Loading...
		.percentage